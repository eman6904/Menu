<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Price">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:textColor="#FFFF"
        android:gravity="center"
        android:textStyle="bold"
        android:background="#771E1E"
        android:textSize="@dimen/_20sdp"
        android:text="Order" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/_39sdp"
        android:gravity="center">
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_350sdp"
            android:layout_height="@dimen/_290sdp"
            app:cardBackgroundColor="@color/cardview_shadow_end_color"
            app:cardCornerRadius="@dimen/_55sdp"
            app:cardUseCompatPadding="true"
            app:cardElevation="8dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/_350sdp"
                android:layout_height="@dimen/_290sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/_30sdp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/p1" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="#771E1E"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_45sdp"
        android:gravity="center">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textStyle="bold"
            android:textColor="#FFFF"
            android:textSize="@dimen/_30sdp"
            android:layout_weight="2"
            android:text=" 150" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="#FFFF"
            android:textSize="@dimen/_30sdp"
            android:text="السعر : " />
    </LinearLayout>
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/_365sdp"
        android:textStyle="bold"
        android:textColor="#FFFF"
        android:textSize="@dimen/_20sdp"
        android:text="@string/text1" />
    <TextView
        android:id="@+id/link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/_445sdp"
        android:textStyle="bold"
        android:textColor="#E31B2C"
        android:textSize="@dimen/_25sdp"
        android:text="@string/enter" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
       android:layout_gravity="bottom"
        android:textColor="#FFFF"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/_25sdp"
        android:background="#771E1E"
        android:text="@string/order" />
</FrameLayout>